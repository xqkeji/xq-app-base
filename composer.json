{
    "name": "xqkeji/app-base",
    "description": "一个基于新齐低代码开发框架后台管理的基础管理模块，是整个后台管理系统的核心模块。",
    "version": "1.0.2",
    "type": "library",
    "license": "SSPL-1.0",
    "autoload": {
        "psr-4": {
            "xqkeji\\app\\base\\": "src/"
        }
    },
    "authors": [
        {
            "name": "xqkeji.cn"
        }
    ],
    "require": {
        "twbs/bootstrap": "^5.2"
    },
    "scripts": {
        "post-update-cmd": [
            "xqkeji\\app\\base\\composer\\Asset::excute"
        ],
        "post-install-cmd": [
            "xqkeji\\app\\base\\composer\\Asset::excute"
        ]
    },
    "extra": {
        "post-update-cmd":[
            {
                "cmd":"rmDir",
                "param":["www/assets/bootstrap/"]
            },
            {
                "cmd":"copyDir",
                "param":["vendor/twbs/bootstrap/dist/","www/assets/bootstrap/"]
            }
        ],
        "post-install-cmd":[
            {
                "cmd":"rmDir",
                "param":["www/assets/bootstrap/"]
            },
            {
                "cmd":"copyDir",
                "param":["vendor/twbs/bootstrap/dist/","www/assets/bootstrap/"]
            }
        ]
    }
}
